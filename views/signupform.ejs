<% layout("/layouts/boilerplate.ejs") %>

    <body style="margin-top: 100px">
        <div class=" mt-5 loginStyle">
            <div class="row justify-content-center">
                <div>
                    <h3 style="background-color: #BE232B; color:white;padding: 7px 0px; border: 2px solid gray;"
                        class="text-center">
                        <b>User Signup Form</b>
                    </h3>
                    <form action="/auth/signup" method="POST">

                        <div class="form-group mt-3 loginFormStyle">
                            <label for="name"><b>&nbsp;Name:</b></label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="enter name"
                                required>
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="username"><b>&nbsp;Username:</b></label>
                            <input type="text" class="form-control" id="username" name="username"
                                placeholder="enter username" required>
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="email"><b>&nbsp;Email:</b></label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="enter email"
                                required>
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="password"><b>&nbsp;Password:</b></label>
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="enter name" required>
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="bloodgroup"><b>&nbsp;Blood Group:</b></label>
                            <select class="form-control" id="bloodgroup" name="bloodgroup" required>
                                <option>Select Blood Type</option>
                                <option>A+</option>
                                <option>A-</option>
                                <option>B+</option>
                                <option>B-</option>
                                <option>O+</option>
                                <option>O-</option>
                                <option>AB+</option>
                                <option>AB-</option>
                            </select>
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="weight"><b>&nbsp;Weight(kg):</b></label>
                            <input type="number" class="form-control" id="weight" name="weight"
                                placeholder="enter weight">
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="phone"><b>&nbsp;Phone:</b></label>
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="enter phone no"
                                required>
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="gender"><b>&nbsp;Gender:</b></label>
                            <select class="form-control" id="gender" name="gender" required>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="age"><b>&nbsp;Age:</b></label>
                            <input type="number" class="form-control" id="age" name="age" placeholder="enter age">
                        </div>


                        <div class="form-group mt-2 loginFormStyle">
                            <label for="division"><b>&nbsp;Division:</b></label>
                            <select class="form-control" id="division" name="division" required>
                                <option>Select Division</option>
                                <option>Barisal</option>
                                <option>Chittagong</option>
                                <option>Dhaka</option>
                                <option>Khulna</option>
                                <option>Mymensingh</option>
                                <option>Rajshahi</option>
                                <option>Rangpur</option>
                                <option>Sylhet</option>
                                <!-- Add more division options as needed -->
                            </select>
                        </div>
                        <div class="form-group mt-2 loginFormStyle">
                            <label for="district"><b>&nbsp;District:</b></label>
                            <select class="form-control" id="district" name="district" required>
                                <option>Select District</option>
                                <!-- Add more district options as needed -->
                            </select>
                        </div>

                        <div class="form-group mt-2 loginFormStyle">
                            <label for="contribution"><b>&nbsp;How Many number of times you donate blood:</b></label>
                            <input type="number" class="form-control" id="contribution" name="contribution" value="0">
                        </div>
                        <div class="form-group mt-2 loginFormStyle">
                            <label for="lastDonateTime"><b>&nbsp;What is the last time you Donate Blood:</b></label>
                            <input type="datetime-local" class="form-control" id="lastDonateTime" name="lastDonateTime">
                        </div>
                        <button type="submit" class="btn loginBtn">SignUp</button>
                    </form>
                </div>
            </div>
        </div>
    </body>

