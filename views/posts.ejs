<% layout("/layouts/boilerplate.ejs") %>
    <br> <br> <br>
    <h3 class="post-header"><b><i>DONATE AND HELP</i></b>
    </h3>
    <div class="container">
        <div class="row">
            <% for (post of posts) { %>
                <div class="col-sm-12 postOffsetter">
                    <div class="ownCard">
                        <p class="card-text"><b>Name:</b>
                            <%= post.username %>
                        </p>
                        <h5 class="card-title">
                            <b>Title: </b>
                            <%= post.title %>
                        </h5>
                        <p class="card-text"><b>Blood Group:</b>
                            <%= post.bloodGroup %>
                        </p>
                        <p class="card-text"><b>Description:</b>
                            <%= post.description %>
                        </p>
                        <p class="card-text"><b>Patient Type:</b>
                            <%= post.patientType %>
                        </p>
                        <p class="card-text"><b>Phone No:</b>
                            <%= post.phone %>
                        </p>
                    </div>
                    <div>
                        <img class="post-img" src="<%= postPicture %>" alt="Card image cap">
                    </div>
                </div>
                <br>
                <div class="container mt-3 mb-4" style="text-align: center;">
                    <form action="/home/posts/edit/<%= post.username %>" method="GET">
                        <button class="btn btn-danger">Edit Post</button>
                    </form>
                </div>
                <hr>
                <% } %>
        </div>
    </div>